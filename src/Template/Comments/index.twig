<nav class="large-3 medium-4 columns" id="actions-sidebar">
    <ul class="side-nav">
        <li class="heading">{{ __('Actions') }}</li>
        <li>{{ Html.link(__('New Comment'), {'action' : 'add'})|raw }}</li>
        <li>{{ Html.link(__('List Posts'), {'controller' : 'Posts', 'action' : 'index'})|raw }}</li>
        <li>{{ Html.link(__('New Post'), {'controller' : 'Posts', 'action' : 'add'})|raw }}</li>
    </ul>
</nav>
<div class="comments index large-9 medium-8 columns content">
    <h3>{{ __('Comments') }}</h3>
    <table cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>{{ Paginator.sort('id')|raw }}</th>
                <th>{{ Paginator.sort('post_id')|raw }}</th>
                <th class="actions">{{ __('Actions') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for comment in comments %}
            <tr>
                <td>{{ Number.format(comment.id) }}</td>
                <td>{{ comment.has('post') ? Html.link(comment.post.title, {'controller' : 'Posts', 'action' : 'view', 0 : comment.post.id})|raw : '' }}</td>
                <td class="actions">
                    {{ Html.link(__('View'), {'action' : 'view', 0 : comment.id})|raw }}
                    {{ Html.link(__('Edit'), {'action' : 'edit', 0 : comment.id})|raw }}
                    {{ Form.postLink(__('Delete'), {'action' : 'delete', 0 : comment.id}, {'confirm' : __('Are you sure you want to delete # {0}?', comment.id)})|raw }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="paginator">
        <ul class="pagination">
            {{ Paginator.prev('< ' ~ __('previous'))|raw }}
            {{ Paginator.numbers()|raw }}
            {{ Paginator.next(__('next') ~ ' >')|raw }}
        </ul>
        <p>{{ Paginator.counter()|raw }}</p>
    </div>
</div>