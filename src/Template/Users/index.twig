<div class="users index large-9 medium-8 columns content">
    <h3>{{ __('Users') }}</h3>
    <table cellpadding="0" cellspacing="0">
        <thead>
            <tr>
                <th>{{ Paginator.sort('username')|raw }}</th>
                <th>{{ Paginator.sort('email')|raw }}</th>
                <th>{{ Paginator.sort('password')|raw }}</th>
                <th>{{ Paginator.sort('first_name')|raw }}</th>
                <th>{{ Paginator.sort('last_name')|raw }}</th>
                <th>{{ Paginator.sort('active')|raw }}</th>
                <th>{{ Paginator.sort('is_superuser')|raw }}</th>
                <th class="actions">{{ __('Actions') }}</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
            <tr>
                <td>{{ user.username|h }}</td>
                <td>{{ user.email|h }}</td>
                <td>{{ user.password|h }}</td>
                <td>{{ user.first_name|h }}</td>
                <td>{{ user.last_name|h }}</td>
                <td>{{ user.active|h }}</td>
                <td>{{ user.is_superuser|h }}</td>
                <td class="actions">
                    {{ Html.link(__('View'), {'action' : 'view', 0 : user.id})|raw }}
                    {{ Html.link(__('Edit'), {'action' : 'edit', 0 : user.id})|raw }}
                    {{ Form.postLink(__('Delete'), {'action' : 'delete', 0 : user.id}, {'confirm' : __('Are you sure you want to delete # {0}?', user.id)})|raw }}
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    <div class="paginator">
        <ul class="pagination">
            {{ Paginator.prev('< ' ~ __('previous'))|raw }}
            {{ Paginator.numbers()|raw }}
            {{ Paginator.next(__('next') ~ ' >')|raw }}
        </ul>
        <p>{{ Paginator.counter()|raw }}</p>
    </div>
</div>