<nav class="large-3 medium-4 columns" id="actions-sidebar">
    <ul class="side-nav">
        <li class="heading">{{ __('Actions') }}</li>
        <li>{{ Html.link(__('Edit User'), {'action' : 'edit', 0 : user.id})|raw }}</li>
        <li>{{ Form.postLink(__('Delete User'), {'action' : 'delete', 0 : user.id}, {'confirm' : __('Are you sure you want to delete # {0}?', user.id)})|raw }}</li>
        <li>{{ Html.link(__('List Users'), {'action' : 'index'})|raw }}</li>
        <li>{{ Html.link(__('New User'), {'action' : 'add'})|raw }}</li>
        <li>{{ Html.link(__('List Posts'), {'controller' : 'Posts', 'action' : 'index'})|raw }}</li>
        <li>{{ Html.link(__('New Post'), {'controller' : 'Posts', 'action' : 'add'})|raw }}</li>
        <li>{{ Html.link(__('List Social Accounts'), {'controller' : 'SocialAccounts', 'action' : 'index'})|raw }}</li>
        <li>{{ Html.link(__('New Social Account'), {'controller' : 'SocialAccounts', 'action' : 'add'})|raw }}</li>
    </ul>
</nav>
<div class="users view large-9 medium-8 columns content">
    <h3>{{ user.id|h }}</h3>
    <table class="vertical-table">
        <tr>
            <th>{{ __('Id') }}</th>
            <td>{{ user.id|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Username') }}</th>
            <td>{{ user.username|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Email') }}</th>
            <td>{{ user.email|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Password') }}</th>
            <td>{{ user.password|h }}</td>
        </tr>
        <tr>
            <th>{{ __('First Name') }}</th>
            <td>{{ user.first_name|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Last Name') }}</th>
            <td>{{ user.last_name|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Token') }}</th>
            <td>{{ user.token|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Api Token') }}</th>
            <td>{{ user.api_token|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Secret') }}</th>
            <td>{{ user.secret|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Role') }}</th>
            <td>{{ user.role|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Token Expires') }}</th>
            <td>{{ user.token_expires|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Activation Date') }}</th>
            <td>{{ user.activation_date|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Tos Date') }}</th>
            <td>{{ user.tos_date|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Created') }}</th>
            <td>{{ user.created|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Modified') }}</th>
            <td>{{ user.modified|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Secret Verified') }}</th>
            <td>{{ user.secret_verified ? __('Yes') : __('No'); }}</td>
        </tr>
        <tr>
            <th>{{ __('Active') }}</th>
            <td>{{ user.active ? __('Yes') : __('No'); }}</td>
        </tr>
        <tr>
            <th>{{ __('Is Superuser') }}</th>
            <td>{{ user.is_superuser ? __('Yes') : __('No'); }}</td>
        </tr>
    </table>
    <div class="related">
        <h4>{{ __('Related Posts') }}</h4>
        {% if (user.posts is not empty): %}
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>{{ __('Id') }}</th>
                <th>{{ __('User Id') }}</th>
                <th>{{ __('Title') }}</th>
                <th>{{ __('Body') }}</th>
                <th>{{ __('Created') }}</th>
                <th>{{ __('Modified') }}</th>
                <th class="actions">{{ __('Actions') }}</th>
            </tr>
            {% for (posts in user.posts): %}
            <tr>
                <td>{{ posts.id|h }}</td>
                <td>{{ posts.user_id|h }}</td>
                <td>{{ posts.title|h }}</td>
                <td>{{ posts.body|h }}</td>
                <td>{{ posts.created|h }}</td>
                <td>{{ posts.modified|h }}</td>
                <td class="actions">
                    {{ Html.link(__('View'), {'controller' : 'Posts', 'action' : 'view', 0 : posts.id})|raw }}
                    {{ Html.link(__('Edit'), {'controller' : 'Posts', 'action' : 'edit', 0 : posts.id})|raw }}
                    {{ Form.postLink(__('Delete'), {'controller' : 'Posts', 'action' : 'delete', 0 : posts.id], {'confirm' : __('Are you sure you want to delete # {0}?', posts.id)})|raw }}
                </td>
            </tr>
            {% endfor %}
        </table>
        {% endif %}
    </div>
    <div class="related">
        <h4>{{ __('Related Social Accounts') }}</h4>
        {% if (user.social_accounts is not empty): %}
        <table cellpadding="0" cellspacing="0">
            <tr>
                <th>{{ __('Id') }}</th>
                <th>{{ __('User Id') }}</th>
                <th>{{ __('Provider') }}</th>
                <th>{{ __('Username') }}</th>
                <th>{{ __('Reference') }}</th>
                <th>{{ __('Avatar') }}</th>
                <th>{{ __('Description') }}</th>
                <th>{{ __('Link') }}</th>
                <th>{{ __('Token') }}</th>
                <th>{{ __('Token Secret') }}</th>
                <th>{{ __('Token Expires') }}</th>
                <th>{{ __('Active') }}</th>
                <th>{{ __('Data') }}</th>
                <th>{{ __('Created') }}</th>
                <th>{{ __('Modified') }}</th>
                <th class="actions">{{ __('Actions') }}</th>
            </tr>
            {% for (socialAccounts in user.social_accounts): %}
            <tr>
                <td>{{ socialAccounts.id|h }}</td>
                <td>{{ socialAccounts.user_id|h }}</td>
                <td>{{ socialAccounts.provider|h }}</td>
                <td>{{ socialAccounts.username|h }}</td>
                <td>{{ socialAccounts.reference|h }}</td>
                <td>{{ socialAccounts.avatar|h }}</td>
                <td>{{ socialAccounts.description|h }}</td>
                <td>{{ socialAccounts.link|h }}</td>
                <td>{{ socialAccounts.token|h }}</td>
                <td>{{ socialAccounts.token_secret|h }}</td>
                <td>{{ socialAccounts.token_expires|h }}</td>
                <td>{{ socialAccounts.active|h }}</td>
                <td>{{ socialAccounts.data|h }}</td>
                <td>{{ socialAccounts.created|h }}</td>
                <td>{{ socialAccounts.modified|h }}</td>
                <td class="actions">
                    {{ Html.link(__('View'), {'controller' : 'SocialAccounts', 'action' : 'view', 0 : socialAccounts.id})|raw }}
                    {{ Html.link(__('Edit'), {'controller' : 'SocialAccounts', 'action' : 'edit', 0 : socialAccounts.id})|raw }}
                    {{ Form.postLink(__('Delete'), {'controller' : 'SocialAccounts', 'action' : 'delete', 0 : socialAccounts.id], {'confirm' : __('Are you sure you want to delete # {0}?', socialAccounts.id)})|raw }}
                </td>
            </tr>
            {% endfor %}
        </table>
        {% endif %}
    </div>
</div>