<nav class="large-3 medium-4 columns" id="actions-sidebar">
    <ul class="side-nav">
        <li class="heading">{{ __('Actions') }}</li>
        <li>{{ Html.link(__('Edit Post'), {'action' : 'edit', 0 : post.id})|raw }}</li>
        <li>{{ Form.postLink(__('Delete Post'), {'action' : 'delete', 0 : post.id}, {'confirm' : __('Are you sure you want to delete # {0}?', post.id)})|raw }}</li>
        <li>{{ Html.link(__('List Posts'), {'action' : 'index'})|raw }}</li>
        <li>{{ Html.link(__('New Post'), {'action' : 'add'})|raw }}</li>
    </ul>
</nav>
<div class="posts view large-9 medium-8 columns content">
    <h3>{{ post.title|h }}</h3>
    <table class="vertical-table">
        <tr>
            <th>{{ __('User Id') }}</th>
            <td>{{ post.user_id|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Title') }}</th>
            <td>{{ post.title|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Id') }}</th>
            <td>{{ Number.format(post.id) }}</td>
        </tr>
        <tr>
            <th>{{ __('Created') }}</th>
            <td>{{ post.created|h }}</td>
        </tr>
        <tr>
            <th>{{ __('Modified') }}</th>
            <td>{{ post.modified|h }}</td>
        </tr>
    </table>
    <div class="row">
        <h4>{{ __('Body') }}</h4>
        {{ Text.autoParagraph(post.body|h)|raw }}
    </div>
</div>